.publish
  position fixed
  right 30%
  margin-right -100px
  top 40px
  background #fff
  border-radius 16px
  color #333
  padding 4px 20px
  outline none
  cursor pointer
  appearance none
  border 1px solid #ddd

  &.disabled
    color #ddd
    cursor disabled

  @media (max-width: 600px)
    top 10px
    right 10px
    margin-right 0
